<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Meyman" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Meyman" parent="Base.Theme.Meyman" />

    <style name="CustomBottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="android:background">@color/black</item>
    </style>

    <style name="SpinnerButtonStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="textCaps" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="card_num">
        <item name="android:layout_height">30dp</item>
    </style>

    <style name="SeekBarColor"
        parent="Widget.AppCompat.SeekBar">
        <item name="colorAccent">@color/blue1</item>
    </style>

    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#1164B4</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo4</item>
        <item name="postSplashScreenTheme">@style/Theme.Meyman</item>
    </style>
</resources>